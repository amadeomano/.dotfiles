{
    "editor.fontLigatures": true,
    "editor.fontFamily": "Fira Code iScript",
    "editor.fontSize": 15,
    "editor.lineHeight": 25,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
              "scope": [
                "comment",
                "keyword", //import, export, returnâ€¦
                "storage.type.js", //let & const keyword
                "storage.type.class.js", //class keyword
                "storage.type.function.js", // function keyword
                "variable.language.this.js", // js this keyword
                "support.function.js", // js CommonJS require keyword
              ],
              "settings": {
                "fontStyle": "italic"
              }
            },
            {
              "scope": [
                "keyword.operator.comparison" // <>!===
              ],
              "settings": {
                "fontStyle": ""
              }
            }
        ]
    },
    "workbench.iconTheme": "file-icons",
    "workbench.colorTheme": "One Dark Pro",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    // Map VIM u|^r to vscode default behavior
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["u"],
        "after": [],
        "commands": [ { "command": "undo", "args": [] } ]
      },
      {
        "before": ["<C-r>"],
        "after": [],
        "commands": [ { "command": "redo", "args": [] } ]
      }
    ],
    "editor.lineNumbers": "relative",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
}