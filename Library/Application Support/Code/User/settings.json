{
  "editor.fontLigatures": true,
  "editor.fontFamily": "Fira Code iScript",
  "editor.fontSize": 15,
  "editor.lineHeight": 25,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword", //import, export, returnâ€¦
          "storage.type.js", //let & const keyword
          "storage.type.class.js", //class keyword
          "storage.type.function.js", // function keyword
          "variable.language.this.js", // js this keyword
          "support.function.js" // js CommonJS require keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "keyword.operator.comparison" // <>!===
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "workbench.colorTheme": "One Dark Pro",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  // Map VIM u|^r to vscode default behavior
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [{ "command": "undo", "args": [] }]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [{ "command": "redo", "args": [] }]
    }
  ],
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "files.exclude": {
    "**/node_modules": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "go.formatTool": "goimports",
  "diffEditor.renderSideBySide": false,
  "workbench.iconTheme": "file-icons",
  "vim.sneak": true,

  // auto Formating
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "go.toolsManagement.autoUpdate": true,
  "terminal.integrated.tabs.enabled": true,
  "eslint.migration.2_x": "off",
  "jira-plugin.workingProject": "",
  "cssVariables.lookupFiles": [
    "**/node_modules/@highlight-ui/tokens/dist/tokens.css"
  ],
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.accessibilitySupport": "off",
  "workbench.sideBar.location": "right",
  "editor.stickyScroll.enabled": true
}
