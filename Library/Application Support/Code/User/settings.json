{
  "editor.fontLigatures": true,
  "editor.fontFamily": "Fira Code iScript",
  "editor.lineHeight": 25,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword", //import, export, returnâ€¦
          "storage.type.js", //let & const keyword
          "storage.type.class.js", //class keyword
          "storage.type.function.js", // function keyword
          "variable.language.this.js", // js this keyword
          "support.function.js" // js CommonJS require keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "keyword.operator.comparison" // <>!===
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  // Map VIM u|^r to vscode default behavior
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [{ "command": "undo", "args": [] }]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [{ "command": "redo", "args": [] }]
    }
  ],
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "files.exclude": {
    "**/node_modules": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "go.formatTool": "goimports",
  "diffEditor.renderSideBySide": false,

  // auto Formating
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "go.toolsManagement.autoUpdate": true,
  "terminal.integrated.tabs.enabled": true,
  "eslint.migration.2_x": "off",
  "jira-plugin.workingProject": "",
  "cssVariables.lookupFiles": [
    "**/node_modules/@highlight-ui/tokens/dist/tokens.css"
  ],
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": true,
  "telemetry.telemetryLevel": "off",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "none",
  "window.commandCenter": false,
  "editor.minimap.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "apc.stylesheet": {
    ".monaco-workbench .part.editor>.content .editor-group-container .editor-group-watermark>.letterpress": "display: none;",
    ".inline-title-bar:not(.statusbar-editor-top):not(.statusbar-top) .monaco-workbench.mac.no-activity-bar.sidebar-right.noauxiliarybar:not(.fullscreen) .part.editor>.content .editor-group-container>.title:not(.tabs)": "padding-left: 0"
  },
  "apc.electron": {
    "titleBarStyle": "customButtonsOnHover",
    "backgroundColor": "rgba(123, 123, 123, 0.5)",
    "frame": false,
    "transparent": true,
    "vibrancy": "ultra-dark",
    "opacity": 0.9, // Range: 0-1 (To go fully transparent, set it to 0)
    "visualEffectState": "active",
    "setWindowButtonVisibility": false
  },
  "vscode_custom_css.imports": [
    "file:////Users/amadeo.manouchehri/Library/Application Support/Code/User/custom.css"
  ],
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "never",
  "gitlens.ai.experimental.provider": "openai",
  "gitlens.ai.experimental.openai.model": "gpt-4-turbo-preview",
  "gitlens.graph.minimap.enabled": false,
  "vim.foldfix": true,
  "window.autoDetectColorScheme": true,
  "editor.fontSize": 15,
  "workbench.iconTheme": "material-icon-theme",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "git.autofetch": true,
  "jestrunner.jestPath": "../../node_modules/jest/bin/jest.js",
  "vim.leader": " ",
  "vim.sneak": true,
  "svg.preview.boundingBox": true,
  "svg.preview.transparencyGrid": false,
  "svelte.enable-ts-plugin": true
}
