# Dotfiles repo alias
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# Python install shortcut
alias pi='python3 -m pip install --user $@'

# Git related aliases
alias gs='git status'
alias ga='git add $@'
alias gc='git commit $@'
alias gp='git pull'
alias gd='git diff $@'

# Personio CLI
alias pc='$HOME/personio/perctl'
